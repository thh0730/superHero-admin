/* 视频播放 start */
.player {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	        justify-content: center;
	background-color: black;
}
.movie {
	width: 100%;
	height: 440rpx;
}
/* 视频播放 end */
/* 影片基本信息 start */
.movie-info {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	-webkit-flex-direction: row;
	        flex-direction: row;
	background-color: #f7f4f9;
	padding: 40rpx 20rpx;
}
.movie-cover {
	width: 280rpx;
	height: 380rpx;
}
.movie-desc {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	        flex-direction: column;
	margin-left: 30rpx;
	width: 400rpx;
}
.movie-title {
	font-size: 30px;
}
.basic-info {
	color: darkgray;
	font-size: 13px;
	line-height: 36rpx;
	white-space: nowrap;
	overflow: hidden;
	text-overflow: ellipsis;
}
/* 评分块 */
.score-block {
	background-color: #fff;
	margin-top: 20rpx;
	width: 360rpx;
	height: 90rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	-webkit-flex-direction: row;
	        flex-direction: row;
	-webkit-box-pack: start;
	-webkit-justify-content: flex-start;
	        justify-content: flex-start;
	padding: 20rpx;
	/* 阴影 */
	box-shadow: 3px 2px 10px #dedede;
}
.score-words {
	font-size: 12px;
	color: gray;
}
.movie-score {
	font-size: 26px;
	font-weight: bold;
	margin-left: 8rpx;
	color: orange;
	line-height: 60rpx;
}
.praise-counts {
	font-size: 12px;
	color: gray;
	line-height: 44rpx;
}
/* 影片基本信息 end */
/* 剧情介绍 start */
.plots-block {
	background-color: #f7f4f9;
	padding: 20rpx 40rpx;
}
.plots-title {
	color: #A9A9A9;
	font-size: 14px;
}
.plots-desc {
	margin-top: 10rpx;
	font-size: 16px;
}
/* 剧情介绍 end */
/* 剧照 start */
.scroll-block {
	background-color: #f7f4f9;
	padding: 20rpx 40rpx;
	/* display: flex;
	flex-direction: column; */
}
.scroll-list {
	width: 100%;
	white-space: nowrap;
	margin-top: 20rpx;
}
.plots-image {
	width: 220rpx;
	height: 320rpx;
	margin-right: 10rpx;
}
/* 剧照 end */
/* 演职人员 start */
.single-actor {
	width: 170rpx;
	height: 240rpx;
	margin-right: 10rpx;
}
.director-wapper, .actor-wapper {
	display: inline-block;
}
.director-name, .actor-name {
	width: 170rpx;
	text-align: center;
	font-size: 15px;
	white-space: nowrap;
	overflow: hidden;
	text-overflow: ellipsis;
}
.director-actName, .actor-actName {
	width: 170rpx;
	text-align: center;
	font-size: 13px;
	color: #A9A9A9;
}
/* 演职人员 end */

